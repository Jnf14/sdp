<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/white">

    <include layout="@layout/activity_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="100dp">

        <Button
            android:id="@+id/main_button_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_profile"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/main_button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/openMapButtonText"
            app:layout_constraintTop_toBottomOf="@+id/main_button_profile" />

        <Button
            android:id="@+id/main_button_findMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_findMatch"
            app:layout_constraintTop_toBottomOf="@+id/main_button_map" />

    </LinearLayout>

</FrameLayout>